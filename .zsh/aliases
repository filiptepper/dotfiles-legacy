alias autofeature="export AUTOFEATURE=true && autotest"
alias autospec="export AUTOFEATURE=false && autotest"

alias feature="bundle exec cucumber -r features"

alias gb="git branch"
alias gbd="git branch -d"
alias gc="git checkout"
alias gcam="git commit -am"
alias gcb="git checkout -b"
alias gf="git fetch"
alias gm="git merge"
alias gp="git push"
alias grom="git rebase origin/master"
alias griom="git rebase -i origin/master"
alias gs="git status"

alias ls="ls -G"

alias td="tail -f ./log/development.log"

show () { mate `bundle show $1` }