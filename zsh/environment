function git_prompt_info() {
  ref=$(git symbolic-ref HEAD 2> /dev/null) || return
  echo "%{$fg_bold[red]%}${ref#refs/heads/}%{$reset_color%} "
}

PROMPT='ï£¿ %{$fg[green]%}%c %{$fg[yellow]%}$(git_prompt_info)%{$fg[yellow]%}$%{$reset_color%} '
