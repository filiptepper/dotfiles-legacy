# start

case $1 in
  mysql )
    mysql.server start
    ;;
  postgresql )
    pg_ctl -D /usr/local/var/postgres -l /tmp/logfile start
    ;;
  redis )
    redis-server /usr/local/etc/redis.conf
    ;;
  elasticsearch )
    elasticsearch -d es.config=/usr/local/opt/elasticsearch/config/elasticsearch.yml
    ;;
  memcached )
    memcached -d
    ;;
  mongodb )
    mongod --fork
    ;;
  influxdb )
    influxdb -config=/usr/local/etc/influxdb.conf
    ;;
  neo4j )
    neo4j start
    ;;
  * )
    echo 'No service found.'
    ;;
esac