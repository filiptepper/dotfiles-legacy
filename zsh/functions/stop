# stop

case $1 in
  mysql )
    mysql.server stop
    ;;
  postgresql )
    pg_ctl -D /usr/local/var/postgres -l logfile stop
    ;;
  redis )
    redis-cli shutdown
    ;;
  mongodb )
    mongod --shutdown
    ;;
  neo4j )
    neo4j stop
    ;;
  hadoop )
    /usr/local/Cellar/hadoop/2.7.0/sbin/stop-yarn.sh;/usr/local/Cellar/hadoop/2.7.0/sbin/stop-dfs.sh
    ;;
  * )
    echo 'No service found.'
    ;;
esac
