alias be="bundle exec"

alias convert-raw="ufraw-batch --compression=90 --exposure=1 --out-type=jpeg --out-path=./jpg ./*.NEF"

alias feature="bundle exec cucumber -r features"

 # =======
 # = git =
 # =======

alias ga="git archive --format zip --output repository.zip master"
alias gb="git branch"
alias gc="git checkout"
alias gd="git diff --word-diff"
alias gcm="git commit"
alias gf="git fetch"
alias gl="git log --oneline --decorate"
alias gm="git merge"
alias gp="git push"
alias gr="git rebase"
alias grom="git rebase origin/master"
alias griom="git rebase -i origin/master"
alias gs="git status"

 # ========
 # = grep =
 # ========

alias grn="grep -rn"
alias grni="grep -rni"

alias ls="ls -G"

alias td="tail -f ./log/development.log"

alias www="python -m SimpleHTTPServer"

show () { e "`bundle show $1`" }